<%= link_to user_path(user) do %>
  <div class="user-container">
    <div class='image-container'>
      <img src="<%= user.photo %>" alt="<%= user.name %>" />
    </div>
    <div class='text-container'>
      <h2><%= user.name %></h2>
      <p>Number of posts: <%= user.posts_counter %></p>
    </div>
  </div>
<% end %>