<%=link_to user_post_path(@user, post) do %>
  <div class="post">
    <h3><%= post.title %></h3>
    <p><%= post.text %></p>
    <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %> </p>
  </div>
<% end %>
<% if can? :destroy, post %>
  <%= button_to("Delete Post", method: :delete) %>
<% end %>
